%!PS
<< /PageSize [595 842] >> setpagedevice

/oshow %stack: (string)
{ true charpath stroke } def

/showallfonts {
    /x 72 def
    /y 738 def
    /fs 10 def
    /Helvetica fs selectfont
    (*) {x y moveto show /y y fs sub def y 36 lt {showpage /y 738 def}if} 256 string /Font resourceforall
    showpage
} def

/word {
    /x 1
    /dice  {rand 100 mod
            80
            lt}  def

    /size {y 0.144 mul} def
    /jitterx {dice {0} {rand 30 mod} ifelse} def
    /jittery {dice {0} {rand 10 mod} ifelse} def

    %/AvenirNext-Heavy findfont size scalefont setfont
    %/Futura-Bold findfont size scalefont setfont
    /Phosphate-Solid findfont size scalefont setfont

    /dir {y direction} def
    /x' {xgrowth dir mul xoffset add marginxoffset add jitterx add} def
    /y' {y marginyoffset add ygrowth mul jittery add} def
    /color {0.0008 y mul 1.3 exch sub} def

    color setgray

    1.0 scale
    x' y' moveto
    0.0 0.0 translate
    angle rotate
    letter
    oshow
}  def

/drawall     {w it pageheight {
                  /y exch def
                  /x 1 def
                  word
              }
              for
} def

/angleCorrection { %argument - angle of rotation
    pageheight w sub it div 1 add  mul -1 mul } def


