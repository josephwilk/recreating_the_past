/word {
    /dice  {rand 100 mod
            99
            lt}  def

    /size {y 6 div} def

    /jitter {dice {0} {4} ifelse} def

    /y'   {y marginyoffset add} def
    /x'   {x marginxoffset add} def

    /y''  y' def%{y' jitter add} def
    /x''  x' def%{x' jitter add} def

    /Helvetica-Bold findfont size scalefont setfont
    /target {dice {(JOSEPH)} {(JOSEPH)} ifelse} def
    %/target (Joseph)
    /yz {y 0.2 mul} def

    %1 1 translate
    %1 rotate

    newpath
    x'' y'' moveto
    target
    oshow

}  def

%         startval inc final     procedure
/wordline {w       ww  pagewidth {/x exch def word}     for} def
/page     {w margin pageheight { /y exch def wordline } for} def



